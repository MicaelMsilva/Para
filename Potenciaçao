programa
{
	funcao inicio()
	{
		real base
		real expoente
		real resultado = 1
		
		escreva("Informe a Base: ")
		leia(base)
		
		escreva("Informe o Expoente: ")
		leia(expoente)
		
		
		se (expoente == 0)
		{
			resultado = 1
		}
		senao se (expoente == 1)
		{
			resultado = base
		}
		senao
		{
			para (inteiro i = 1; i <= expoente; i++)
			{
				resultado = resultado * base
			}
		}
		
		escreva("O resultado Ã©: ", resultado)
	}
}
